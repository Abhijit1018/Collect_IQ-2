<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="Schedule New Follow-up" contentWidth="400px">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Customer" required="true"/>
                <Select id="payerSelect"
                    forceSelection="false"
                    items="{/Payers}"
                    width="100%">
                    <core:Item key="{PayerId}" text="{PayerName} (ID: {PayerId})"/>
                </Select>

                <Label text="Date" required="true" class="sapUiSmallMarginTop"/>
                <DatePicker id="scheduledDate"
                    displayFormat="dd/MM/yyyy"
                    valueFormat="yyyy-MM-dd"
                    width="100%"/>

                <Label text="Reason" required="true" class="sapUiSmallMarginTop"/>
                <TextArea id="reason"
                    rows="4"
                    width="100%"
                    placeholder="Enter reason for follow-up..."/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Schedule" type="Emphasized" press="onSaveFollowup"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelFollowup"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
