<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog title="Add New Invoice">
		<content>
			<VBox class="sapUiSmallMargin">
				<Label text="Invoice Number" required="true"/>
				<Input id="invoiceNumberInput" placeholder="e.g. INV-2026-001"/>

				<Label text="Amount" required="true"/>
				<Input id="invoiceAmountInput" type="Number" placeholder="e.g. 5000.00"/>

                <Label text="Currency"/>
                <Input id="invoiceCurrencyInput" value="USD" editable="false"/>

				<Label text="Due Date" required="true"/>
				<DatePicker id="invoiceDueDateInput" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" placeholder="Select Date"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Create" type="Emphasized" press="onSubmitInvoice"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelInvoice"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
