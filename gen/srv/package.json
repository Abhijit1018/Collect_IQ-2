{
  "name": "collectiq",
  "version": "1.0.0",
  "description": "AI-Powered Collections Assistant",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4.2.0",
    "@sap-cloud-sdk/http-client": "^4.2.0",
    "@sap-cloud-sdk/resilience": "^4.2.0",
    "@sap/approuter": "^20.8.7",
    "@sap/audit-logging": "^6.9.0",
    "@sap/cds": "^9.6.1",
    "@sap/logging": "^9.0.0",
    "@sap/xsenv": "^6.0.0",
    "@sap/xssec": "^4.12.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.1.2",
    "@sap/cds-dk": "^9.6.0",
    "@sap/ux-ui5-tooling": "1",
    "mbt": "^1.2.34",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build",
    "deploy": "cf deploy mta_archives/collectiq_1.0.0.mtar"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "ZUI_COLLECTIQ_04": {
        "kind": "odata-v4",
        "model": "srv/external/ZUI_COLLECTIQ_04",
        "credentials": {
          "destination": "ZUI_COLLECTIQ_04",
          "path": "/sap/opu/odata/sap/ZUI_COLLECTIQ_04"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": "xsuaa"
      }
    }
  },
  "services": {
    "CollectIQService": {
      "kind": "odata",
      "path": "/odata/v4/collect-iq"
    }
  },
  "engines": {
    "node": ">=20"
  }
}